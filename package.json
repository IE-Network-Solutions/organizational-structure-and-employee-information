{
  "name": "nestjs-template",
  "version": "1.0.0",
  "description": "",
  "author": "Abeselom Gebrekidan",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "pm2 start ecosystem.config.json --env production",
    "start:stage": "pm2 start stage-ecosystem.config.json --env production",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV=test jest --config ./test/jest-e2e.json",
    "docs": "compodoc -p compodoc.tsconfig.json -s",
    "typeorm": " npm run build && npx typeorm -d dist/database/migration-data-source.js",
    "migration:generate": "npm run typeorm -- migration:generate ./src/app/migrations/pepMigration ",
    "migration:run": "npm run build && npx typeorm migration:run -d dist/database/migration-data-source.js",
    "migration:revert": "npm run typeorm -- migration:revert",
    "migration:generate-run": "npm run migration:generate && npm run migration:run"
  },
  "dependencies": {
    "@casl/ability": "^6.4.0",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.4.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.4.0",
    "@nestjs/event-emitter": "^1.4.1",
    "@nestjs/jwt": "^10.0.3",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^9.4.3",
    "@nestjs/schedule": "^4.1.1",
    "@nestjs/swagger": "^6.3.0",
    "@nestjs/terminus": "^9.2.2",
    "@nestjs/throttler": "^4.2.1",
    "@nestjs/typeorm": "^9.0.1",
    "axios": "^1.3.5",
    "bcrypt": "^5.1.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.5",
    "express-session": "^1.17.3",
    "firebase": "^10.12.5",
    "firebase-admin": "^12.3.1",
    "form-data": "^4.0.0",
    "google-auth-library": "^9.15.1",
    "googleapis": "^146.0.0",
    "helmet": "^6.1.5",
    "joi": "^17.9.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nest": "^0.1.6",
    "nestjs-typeorm-paginate": "^4.0.4",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.6.2",
    "typeorm": "^0.3.15",
    "undefined": "^0.1.0",
    "uuid": "^9.0.0",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.24",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.4.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.7",
    "@types/cron": "^2.4.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.7",
    "@types/jest": "^29.5.12",
    "@types/multer": "^1.4.7",
    "@types/node": "20.2.5",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/sqlite3": "^3.1.8",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^9.0.1",
    "@types/validator": "^13.7.15",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.5.0",
    "jest-mock-extended": "^3.0.4",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "sqlite3": "^5.1.6",
    "supertest": "^6.1.3",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coveragePathIgnorePatterns": [
      "src/main.ts",
      "/.*\\.module\\.ts$",
      "/.*\\.entity\\.ts$"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^@root/(.*)$": "<rootDir>/../$1",
      "^@/(.*)$": "<rootDir>/../src/$1",
      "^@app/(.*)$": "<rootDir>/../src/app/$1",
      "^@config/(.*)$": "<rootDir>/../src/config/$1",
      "^@database/(.*)$": "<rootDir>/../src/database/$1",
      "^@shared/(.*)$": "<rootDir>/../src/shared/$1",
      "^@core/(.*)$": "<rootDir>/../src/core/$1"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  }
}
